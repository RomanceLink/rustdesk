[Unit]
Description=LaLaDesk
Requires=network.target
After=systemd-user-sessions.service

[Service]
Type=simple
ExecStart=/usr/bin/laladesk --service
# kill --tray and --server both
ExecStop=pkill -f "laladesk --"
# below two lines do not work, have to use above one line
#ExecStop=pkill -f "laladesk --tray"
#ExecStop=pkill -f "laladesk --server"
PIDFile=/run/laladesk.pid
KillMode=mixed
TimeoutStopSec=30
User=root
LimitNOFILE=100000

[Install]
WantedBy=multi-user.target
